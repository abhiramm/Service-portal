<h1>Listing conferences</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Schedule</th>
    <th>Cost</th>
    <th>Video</th>
    <th>Audio</th>
    <th>Doc</th>
    <th>Presentations</th>
    <th>Offered sessions</th>
    <th>Interested sessions</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @conferences.each do |conference| %>
  <tr>
    <td><%= conference.name %></td>
    <td><%= conference.description %></td>
    <td><%= conference.schedule %></td>
    <td><%= conference.cost %></td>
    <td><%= conference.video %></td>
    <td><%= conference.audio %></td>
    <td><%= conference.doc %></td>
    <td><%= conference.presentations %></td>
    <td><%= conference.offered_sessions %></td>
    <td><%= conference.interested_sessions %></td>
    <td><%= conference.user_id %></td>
    <td><%= link_to 'Show', conference %></td>
    <td><%= link_to 'Edit', edit_conference_path(conference) %></td>
    <td><%= link_to 'Destroy', conference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

